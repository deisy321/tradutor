@model Tradutor.Models.Traducao
@{
    ViewBag.Title = "Excluir Tradução";
}

<h2>Excluir Tradução</h2>

<h3>Tem certeza que deseja excluir esta tradução?</h3>

<div>
    <h4>Tradução</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Idioma</dt>
        <dd>@Model.Idioma.Descricao</dd>

        <dt>Texto Original</dt>
        <dd>@Model.TextoOriginal</dd>

        <dt>Texto Traduzido</dt>
        <dd>@Model.TextoTraduzido</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Excluir" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
    }
</div>
