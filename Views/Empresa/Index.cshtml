@model IEnumerable<Tradutor.Models.Empresa>

@{
    ViewBag.Title = "Empresas";
}

<h2>Empresas</h2>

<p>
    @Html.ActionLink("Criar Nova Empresa", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Responsável</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empresa in Model)
        {
            <tr>
                <td>@empresa.Nome</td>
                <td>@empresa.Telefone</td>
                <td>@empresa.Email</td>

                <td>@empresa.Responsavel</td>
                <td>
                    @Html.ActionLink("Detalhes", "Details", new { id = empresa.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = empresa.Id }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = empresa.Id }, new { @class = "btn btn-danger btn-sm" })

                </td>



            </tr>
        }
    </tbody>
</table>
