@using Tradutor.Models
@{
    var idiomas = ViewBag.IdiomasCompletos as List<Idioma> ?? new List<Idioma>();
    var idiomaAtual = (Session["Idioma"]?.ToString() ?? "pt").ToLower();
    var idiomaAtualObj = idiomas.FirstOrDefault(i => i.Codigo.ToLower() == idiomaAtual);
    var idiomaAtualHtml = idiomaAtualObj != null
        ? $"<img src='{idiomaAtualObj.BandeiraUrl}' alt='{idiomaAtualObj.Descricao}' style='width:24px; height:16px; margin-right:5px;' /> {idiomaAtualObj.Descricao}"
        : "<span class='fi fi-world'></span> Idioma";

    // Função local para traduzir
    Func<string, string> Traduzir = texto => Tradutor.Helpers.TradutorHelper.Traduzir(texto, idiomaAtual);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Traduzir(ViewBag.Title ?? "Meu Aplicativo ASP.NET")</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/Content/favicon.png" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink(Traduzir("Tradutor "), "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @Html.Raw(idiomaAtualHtml)
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var item in idiomas)
                            {
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Trocar", "Idioma", new { lang = item.Codigo, returnUrl = Request.RawUrl })">
                                        <img src="@item.BandeiraUrl" alt="@item.Descricao" style="width:24px; height:16px; margin-right:5px;" />
                                        @item.Descricao
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(Traduzir("Traduções"), "Index", "Traducao", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(Traduzir("Idiomas Cadastrados"), "Index", "Idioma", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(Traduzir("Adicionar Idioma"), "Create", "Idioma", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content mt-3">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Traduzir("Meu Aplicativo ASP.NET")</p>
        </footer>
    </div>

    <!-- Somente o Bootstrap bundle, que já inclui Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
