@model IEnumerable<Tradutor.Models.GrupoPermissao>

@{
    ViewBag.Title = "Gestão de Permisões";
}

<h2>Gestão de Permissões</h2>

<p>
    @Html.ActionLink("Criar Novo Grupo", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Criar Novo Utilizador", "Create", "Utilizador", null, new { @class = "btn btn-success", style = "margin-left:10px;" })
    @Html.ActionLink("Criar Nova Empresa", "Create", "Empresa", null, new { @class = "btn btn-success", style = "margin-left:10px;" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Nome</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })

                </td>
            </tr>


        }
    </tbody>
</table>
